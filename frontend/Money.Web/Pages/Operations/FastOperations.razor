@page "/fast-operations"
<PageTitle>Быстрые операции</PageTitle>

<MudText GutterBottom
         Typo="Typo.h3">
    Быстрые операции
</MudText>

<MudGrid Spacing="2"
         Class="mb-2">
    @foreach (var type in OperationTypes.Values)
    {
        <MudItem lg="3"
                 md="4"
                 xs="12">
            <MudButton Color="@type.Color"
                       EndIcon="@Icons.Material.Filled.Add"
                       OnClick="() => Create(type)"
                       FullWidth
                       Variant="Variant.Outlined">
                @type.AddText
            </MudButton>
        </MudItem>
    }
    <MudItem lg="3"
             md="4"
             xs="12">
        <MudButton EndIcon="@Icons.Material.Filled.Add"
                   OnClick="() => Create()"
                   FullWidth
                   Variant="Variant.Outlined">
            Добавить
        </MudButton>
    </MudItem>
</MudGrid>

<MudDivider Class="my-4" />

<MudGrid Spacing="2">
    <Virtualize Context="operation"
                Items="_operations">
        <MudItem Class="mb-1"
                 lg="3"
                 md="4"
                 xs="12">
            <FastOperationCard OnUpdate="Update"
                               Operation="operation" />
        </MudItem>
    </Virtualize>
</MudGrid>
