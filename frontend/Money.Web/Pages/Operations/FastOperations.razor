@page "/fast-operations"

<PageTitle>Быстрые операции</PageTitle>

<MudText GutterBottom
         Typo="Typo.h3">
    Быстрые операции
</MudText>


@if (Operations == null)
{
    return;
}

<MudStack Class="mb-3"
          Row>
    @*TODO: Добавить кнопки создания с определенным типом*@
    <MudButton Color="Color.Primary"
               EndIcon="@Icons.Material.Rounded.Add"
               OnClick="() => Create()"
               Variant="Variant.Filled">
        Добавить
    </MudButton>
</MudStack>

<MudStack Spacing="2">
    @foreach (FastOperation fastOperation in Operations)
    {
        <MudStack Row
                  StretchItems="StretchItems.Start">
            <MudText>@fastOperation.Name</MudText>
            <MudSpacer />

            @if (fastOperation.IsDeleted)
            {
                <MudButton Color="Color.Info"
                           EndIcon="@Icons.Material.Rounded.Cancel"
                           OnClick="() => Restore(fastOperation)"
                           Size="Size.Large">
                    Восстановить
                </MudButton>
            }
            else
            {
                <MudIconButton Color="Color.Warning"
                               Icon="@Icons.Material.Rounded.Edit"
                               OnClick="() => Update(fastOperation)" />

                <MudIconButton Icon="@Icons.Material.Rounded.Delete"
                               OnClick="() => Delete(fastOperation)" />
            }
        </MudStack>
    }
</MudStack>
