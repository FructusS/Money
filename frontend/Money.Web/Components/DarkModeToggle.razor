<MudTooltip Text="@(AppSettings.IsManualMode ? "Ручной" : "Авто")">
    <MudBadge Bordered
              Class="cursor-pointer"
              Color="@(AppSettings.IsManualMode ? Color.Primary : Color.Secondary)"
              Icon="@(AppSettings.IsManualMode ? Icons.Material.Rounded.Check : Icons.Material.Rounded.SwapHoriz)"
              OnClick="ToggleManualMode"
              Origin="Origin.BottomRight"
              Overlap>
        <MudTooltip Text="@(AppSettings.IsDarkMode ? "Темный" : "Светлый")">
            <MudIconButton Color="Color.Inherit"
                           Icon="@Icons.Material.Rounded.Brightness4"
                           OnClick="ToggleDarkMode"
                           Size="Size.Small"
                           Style="pointer-events: all;" />
        </MudTooltip>
    </MudBadge>
</MudTooltip>
