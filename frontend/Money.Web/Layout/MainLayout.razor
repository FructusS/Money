@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_appSettings.IsDarkMode"
                  @ref="@_mudThemeProvider"
                  Theme="_defaultTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="mud-theme-transparent"
               Elevation="0"
               Style="pointer-events: none;">
        <MudIconButton Color="Color.Inherit"
                       Edge="Edge.Start"
                       Icon="@Icons.Material.Rounded.Menu"
                       OnClick="ToggleDrawer"
                       Size="Size.Small"
                       Style="pointer-events: all;" />
        <MudSpacer />
        <DarkModeToggle AppSettings="_appSettings"
                        @ref="_darkModeToggle" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen"
               Elevation="2">
        <MudDrawerHeader>
            <MudStack AlignItems="AlignItems.Center"
                      Justify="Justify.SpaceBetween"
                      Row
                      Spacing="3">
                <MudImage Class="cursor-pointer"
                          Height="64"
                          @onclick="NavigateToHome"
                          Src="./icon-192.png" />
                <MudText Class="cursor-pointer"
                         @onclick="NavigateToHome"
                         Typo="Typo.h5">
                    Филочки
                </MudText>
            </MudStack>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-3 px-8">
        <MudContainer Gutters
                      MaxWidth="MaxWidth.Large">
            <ErrorBoundary>
                <ChildContent>
                    <CascadingValue IsFixed="true"
                                    Value="_appSettings">
                        <CascadingValue IsFixed="true"
                                        Value="_darkModeToggle">
                            @Body
                        </CascadingValue>
                    </CascadingValue>
                </ChildContent>
                <ErrorContent Context="ex">
                    @{
    #if DEBUG
                        <p>@ex.Message</p>
                        <p>@ex.ToString()</p>
    #endif
                    }
                    <MudAlert Icon="@Icons.Material.Rounded.Error"
                              Severity="Severity.Error">
                        Извините, произошла ошибка.
                        Пожалуйста, попробуйте снова.
                    </MudAlert>
                </ErrorContent>
            </ErrorBoundary>
        </MudContainer>
    </MudMainContent>
</MudLayout>
